{
  "name": "when-to-clock",
  "version": "1.0.0",
  "description": "Workday CLI tool",
  "bin": {
    "whenToClock": "output.cjs"
  },
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --format=cjs --outfile=output.cjs --banner:js='#!/usr/bin/env node' --external:cfonts",
    "start": "node output.cjs",
    "load": "npm install && npm run build && chmod +x output.cjs && npm link"
  },
  "type": "module",
  "dependencies": {
    "@inquirer/prompts": "^7.8.0",
    "@js-temporal/polyfill": "^0.5.1",
    "cfonts": "^3.2.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "esbuild": "^0.20.0",
    "typescript": "^5.4.5"
  }
}
